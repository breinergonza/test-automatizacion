@model ProyectoApiCore.Web.Proyectos

@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-10 container">

    <br /><br /><br />

    <div class="row justify-content-center pb-5">

        <div id="proyectos" class="col-md-12 pb-5">

            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Agregar Proyecto</h5>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="nombreProyecto" class="control-label"></label>
                            <input asp-for="nombreProyecto" class="form-control" />
                            <span asp-validation-for="nombreProyecto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="descripcionProyecto" class="control-label"></label>
                            <input asp-for="descripcionProyecto" class="form-control" />
                            <span asp-validation-for="descripcionProyecto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="logoProyecto" class="control-label"></label>
                            <input asp-for="logoProyecto" class="form-control" />
                            <span asp-validation-for="logoProyecto" class="text-danger"></span>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-8 datePorject">
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="far fa-calendar-alt"></i> Fecha :
                                        <b>
                                            @DateTime.Now.Date.ToString("f")
                                        </b>
                                    </small>
                                </p>
                            </div>

                            <div class="col-md-4 text-right">
                                <a asp-action="Index" class="btn btn-danger">Regresar</a>
                                <a asp-action="Create" class="btn btn-info">Guardar Proyecto</a>
                            </div>
                        </div>
                    </form>

                   
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
