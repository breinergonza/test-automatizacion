@model IEnumerable<ProyectoApiCore.Web.Proyectos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-10 container">
    
    <br /><br /><br />

    <div class="row justify-content-center pb-5">
        
        <div id="proyectos" class="col-md-12 pb-5">

            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Proyectos</h5>

                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nombreProyecto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcionProyecto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.logoProyecto)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreProyecto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descripcionProyecto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.logoProyecto)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.idProyecto">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.idProyecto">Detalles</a> |
                                    <a asp-action="Delete" asp-route-id="@item.idProyecto">Eliminar </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                    <hr>
                    <div class="row">
                        <div class="col-md-8 datePorject">
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="far fa-calendar-alt"></i> Fecha :
                                    <b>
                                        @DateTime.Now.Date.ToString("f")
                                    </b>
                                </small> 
                            </p>
                        </div>

                        <div class="col-md-4 text-right">
                            <a asp-action="Create" class="btn btn-info">Agregar proyecto</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

